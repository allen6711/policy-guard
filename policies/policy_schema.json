{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "PolicyGuard Policy Schema",
    "description": "Defines the structure for a moderation policy file.",
    "type": "object",
    "properties": {
        "name": {
            "description": "The unique name of the policy.",
            "type": "string"
        },
        "description": {
            "description": "A human-readable description of what this policy does.",
            "type": "string"
        },
        "llm_prompt": {
            "description": "The system prompt to be used when consulting the LLM for this policy.",
            "type": "string"
        },
        "rules": {
            "description": "A list of rule-based filters to apply before the LLM check.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["keyword", "regex"]
                    },
                    "description": {
                        "type": "string"
                    },
                    "value": {
                        "type": ["string", "array"]
                    }
                },
                "required": ["type", "value"]
            }
        }
    },
    "required": ["name", "description", "llm_prompt"]
}